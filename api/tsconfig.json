{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": "src",
        "resolveJsonModule": true,
        "paths": {
            "~/*": [
                "./*"
            ],
        }
    },
    "include": [
        "@types",
        "src"
    ],
    "exclude": [
        "node_modules",
        "build",
        "dist"
    ]
}
