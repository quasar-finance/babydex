{
    "$schema": "https://json.schemastore.org/tsconfig",
    "esModuleInterop": true,
    "compilerOptions": {
        "skipLibCheck": true,
        "target": "es2022",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "verbatimModuleSyntax": true,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
        "module": "NodeNext",
        "sourceMap": true,
        "declaration": true,
        "composite": true,
        "declarationMap": true,
        "outDir": "build",
        "rootDir": "src",
        "incremental": true
    },
    "include": [
        "src",
        "global.d.ts"
    ],
    "exclude": [
        "node_modules",
        "build"
    ],
    "references": [
        {
            "path": "../types"
        },
        {
            "path": "../indexer"
        }
    ]
}
